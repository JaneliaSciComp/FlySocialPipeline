profiles {

    local {
        docker {
            enabled = true
        }

        singularity {
            enabled = false
        }
    }

    lsf {
        process.executor = 'lsf'
        process {
            clusterOptions = '-P scicompsoft'
        }

        docker {
            enabled = false
        }

        singularity {
            enabled = true
        }

    }
}

docker {
    runOptions = "-v params.in:params.in -v params.config:params.config -v params.out:params.out"
}

singularity {
    autoMounts = true
    cacheDir = "$HOME/.singularity_cache"
    runOptions = "-B params.in -B params.config -B params.out"
}
